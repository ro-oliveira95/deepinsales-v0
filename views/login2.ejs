<script>
  function showAlertMessage(elementID, message){
    const element = document.querySelector(`#${elementID}`);
    console.log(element)
    element.style.display = "block";
    element.innerHTML = message;
    setTimeout(() => {element.style.display = "none"}, 2000);
  }
</script>

<link rel="stylesheet" href="login.css">
<div class="bg">
  <div class="container">
      <div class="section">
        <h2 class="sec-title">Login</h2>
        <% if(errorLogin) { %>
          <div class="alert">
            <p><%=errorLogin%></p>
          </div>
        <% } %>
        <form action="/api/v1/auth/login" method="POST">
          <div class="form-field">
            <label for="email">Email</label>
            <input type="email" name="email" required>
          </div>
          <div class="form-field">
            <label for="password">Senha</label>
            <input type="password" name="password" required>
          </div>
          <div>
              <button class="btn" type="submit">Entrar</button>
              <button class="btn btn-register">Registrar</button>
          </div>
        </form>
      </div>
      <% if(showRegisterWindow) {%>
        <div class="faded-background"  style="display: flex">
      <% } else { %>
        <div class="faded-background">
      <% } %>
          <% if(showRegisterWindow) {%>
            <div class="popWindow" style="animation: none; width: 40%; height: 350px;">
              <div class="window-content" style="display: block;">
          <% } else { %>
            <div class="popWindow">
              <div class="window-content">
          <% } %>
                <h2 class="sec-title">Registro</h2>
                <% if(errorRegister) { %>
                  <div class="alert">
                    <p><%=errorRegister[0]%></p>
                  </div>
                <% } %>
                <form action="/api/v1/auth/register" method="POST">
                    <div class="form-field">
                        <label for="name">Nome</label>
                        <input type="name"name="name" required>
                    </div>
                    <div class="form-field">
                        <label for="email">Email</label>
                        <input type="email"name="email" required>
                    </div>
                    <div class="form-field">
                        <label for="password">Senha</label>
                        <input type="password"name="password" required>
                    </div>
                    <button class="btn" type="submit">Submeter</button>
                </form>
              </div>
          </div>
      </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
<script src="./login.js"></script>
